{
  "name": "@mount0/memory",
  "version": "0.1.0",
  "type": "module",
  "description": "In-memory filesystem provider for mount0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "memory",
    "filesystem",
    "mount0",
    "in-memory"
  ],
  "license": "MIT",
  "dependencies": {
    "@mount0/core": "file:../core"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "moduleNameMapper": {
      "^@mount0/core$": "<rootDir>/../core/src/index.ts"
    }
  }
}
